{
  "name": "runai-mcp-server",
  "version": "0.1.0",
  "description": "MCP server exposing NVIDIA Run:ai v2.24 documentation and API knowledge",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "runai-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "scrape": "tsx src/scraper/scrape.ts",
    "verify-urls": "tsx src/scraper/verify-urls.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "npm run typecheck",
    "pack:check": "npm pack --dry-run",
    "qa": "npm run pack:check",
    "test": "npm run build && node --test test/*.test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "jsdom": "^28.0.0",
    "node-html-markdown": "^1.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  }
}
